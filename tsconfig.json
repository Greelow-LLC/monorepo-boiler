{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true ,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,

    "noUnusedLocals": true ,
    "noUnusedParameters": true ,
    "skipLibCheck": true 
  }
}
