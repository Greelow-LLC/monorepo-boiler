{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "es6", "es2017"],
    "outDir": "build",
    "rootDir": "./src",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
     "paths": {
      "*": ["node_modules", "src/*"]
    },
    "sourceMap": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/stories/CustomSelect.stories.mdx"
  ],
  "exclude": ["node_modules"]
}
